                                    <span class="text-sm font-medium text-gray-700"><%= blogs[i].author.name %></span>
                                    <div>
                                    <span class="text-xs text-gray-500"><%= blogs[i].createdAt %></span>
                                </div>
                                </div>
                            </div>
