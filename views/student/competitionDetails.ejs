<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= competition.title %> - Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans antialiased">

  <!-- Header Section -->
  <header class="bg-blue-600 text-white py-4 shadow-md">
    <div class="max-w-7xl mx-auto px-6 flex items-center justify-between">
      <h1 class="text-2xl font-semibold">Competition Details</h1>
      <a href="/" class="text-lg font-medium hover:text-gray-200">Back to Competitions</a>
    </div>
  </header>

  <!-- Main Content Section -->
  <div class="max-w-7xl mx-auto px-6 py-8">
    <div class="bg-white p-6 rounded-lg shadow-lg space-y-6">
      <h2 class="text-4xl font-bold text-center text-gray-800"><%= competition.title %></h2>
      <p class="text-lg text-gray-700 text-center"><%= competition.description %></p>
      
      <!-- Competition Details -->
      <div class="flex justify-between items-center text-lg text-gray-600 mt-6">
        <p><strong>Team Size:</strong> <%= competition.teamSize %></p>
        <p><strong>Members:</strong> <%= competition.minMembers %> - <%= competition.maxMembers %></p>
      </div>

      <!-- Prizes Section -->
      <div class="mt-8">
        <h3 class="text-2xl font-semibold text-gray-800">Prizes</h3>
        <% competition.prizes.forEach(prize => { %>
          <div class="bg-gray-50 p-4 mt-4 rounded-lg shadow-sm">
            <h4 class="text-xl font-semibold text-gray-800"><%= prize.title %></h4>
            <p class="text-gray-600"><%= prize.description %></p>
            <div class="flex justify-between items-center mt-2 text-gray-700">
              <p><strong>Amount:</strong> <%= prize.amount %></p>
              <p><strong>Type:</strong> <%= prize.type %></p>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Create Team Section -->
      <div class="mt-8">
        <h3 class="text-2xl font-semibold text-gray-800">Create Team</h3>
        <form action="/create/team/apply/<%= competition.id %>" method="GET" class="mt-4">
          <button type="submit" class="w-full py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 transition-all duration-300">Apply to Team</button>
        </form>
      </div>

      <!-- Join A Team Section -->
      <div class="mt-8">
        <h3 class="text-2xl font-semibold text-gray-800">Join A Team</h3>
        <form action="/search/already/team/apply/<%= competition.id %>" method="POST" class="mt-4 space-y-4">
          <input type="text" name="teamName" placeholder="Enter team name..." class="w-full p-4 border rounded-lg text-lg text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" required>
          <button type="submit" class="w-full py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 transition-all duration-300">Search</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Footer Section -->
  <footer class="bg-gray-800 text-white py-6 mt-12">
    <div class="max-w-7xl mx-auto text-center">
      <p>&copy; 2025 Your Company Name. All rights reserved.</p>
    </div>
  </footer>
</body>
</html>
