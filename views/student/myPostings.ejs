<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>My Team Posts</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/gsap@3.12.2/dist/gsap.min.js"></script>
</head>
<body class="bg-gradient-to-br from-blue-50 to-purple-100 min-h-screen p-6 font-sans">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-gray-800 mb-8 text-center">My Team Posts</h1>

    <% if (posts.length === 0) { %>
      <div class="text-center text-gray-500">No posts found.</div>
    <% } else { %>
      <div class="space-y-6">
        <% posts.forEach((post, index) => { %>
          <div class="bg-white rounded-2xl shadow-lg p-6 opacity-0 post-card">
            <h2 class="text-2xl font-semibold text-blue-700 mb-2"><%= post.title %></h2>
            <p class="text-gray-700 mb-2"><%= post.description %></p>
            <p class="text-sm text-gray-500 mb-4">Skills: <%= post.skillsNeeded.join(', ') %></p>
            <a href="/user/post/<%= post._id %>/applications" class="inline-block px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">View Applications</a>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <script>
    gsap.to(".post-card", {
      opacity: 1,
      y: -10,
      duration: 0.8,
      stagger: 0.2,
      ease: "power2.out"
    });
  </script>
</body>
</html>
